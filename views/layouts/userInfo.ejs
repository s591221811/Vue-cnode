<div class='panel'>
      <div class='header'>
        <span class='col_fade'>个人信息</span>
      </div>
      <div class='inner'>
          <div class='user_card'>
              <div>
                  <a class='user_avatar' href="/user/<%= user._id %>">
                     <% if(user.userpic==''){%>
                          <img src="/img/1.jpg" alt="" style="width:48px; height:48px;">
                     <%}else{%>
                         <img src="/<%= user.userpic%>" alt="" style="width:48px; height:48px;">
                     <%}%>
                   </a>
                  <span class='user_name'><a class='dark' href="/user/<%= user._id %>"><%= user.nickname %></a></span>

                  <div class='board clearfix'>
                    <div class='floor'>
                      <span class='big'>积分: <%= user.gold %> </span>
                    </div>
                  </div>
                  <div class="space clearfix"></div>
                  <span class="signature">
                      “
                      
                          <%= user.mark?user.mark:'这个家伙，什么都没有留下！' %>
                      
                      ”
                  </span>
              </div>
          </div>
      </div>
  </div>
  <div class="panel">
      <div class='inner'>
        <a href='/topic/create' id='create_topic_btn'>
          <span class='span-success'>发布话题</span>
        </a>
      </div>
  </div>