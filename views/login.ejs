<% include layouts/header %>



<!-- required 用来判断表单有无数据 无数据不能提交  -->
<div id='main'>
  <div id='sidebar'>
  <div class='panel'>
    <div class='header'>
      <span class='col_fade'>关于</span>
    </div>
    <div class='inner'>
      <p>CNode：Node.js专业中文社区</p>

      <p>在这里你可以：</p>
      <ul>
        <li>向别人提出你遇到的问题</li>
        <li>帮助遇到问题的人</li>
        <li>分享自己的知识</li>
        <li>和其它人一起进步</li>
      </ul>
    </div>
  </div>
</div>

<div id='content'>
  <div class='panel'>
    <div class='header'>
      <ul class='breadcrumb'>
        <li><a href='/'>主页</a><span class='divider'>/</span></li>
        <li><a href="">登陆</a></li>
      </ul>
    </div>
    <div class='inner'>
      
      <form id='signin_form' class='form-horizontal' action='/dologin' method='post'>
        <% if(errInfo.length>0){%>
      <div class="alert alert-danger alert-dismissible" style="margin-top:-40px">
        <%= errInfo.toString() %>
        <span class="close" data-dismiss="alert">&times;</span>
          </div>
        <%} %>
        <div class='control-group'>
          <label class='control-label' for='username'>用户名</label>

          <div class='controls'>
            <input class='input-xlarge' id='username'   name='username' size='30' type='text'/>
            <span></span>
          </div>
        </div>
        <div class='control-group'>
          <label class='control-label' for="userpwd">密码</label>

          <div class='controls'>
            <input class='input-xlarge' id="userpwd"  name="userpwd" size='30' type='password'/>
            <span></span>
          </div>
        </div>
        <div class='form-actions'>
          <input type='submit' class='span-primary' value='登录'/>
          <a id="forgot_password" href='/reset_pass'>忘记密码</a>
        </div>
      </form>
    </div>
  </div>
</div>

</div>
<div id='backtotop'>回到顶部</div>

<%include layouts/floot %>


